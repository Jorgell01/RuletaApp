            <!-- Sección derecha (Saldo, Apuesta actual, y Confirmar) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/txtBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALDO: 100"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtCurrentBet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APUESTA ACTUAL: 0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnConfirmBet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Confirmar Apuesta"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sección inferior (Fichas para seleccionar) -->
        <LinearLayout
            android:id="@+id/chipOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/chip1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ficha_1"
                android:layout_margin="4dp" />

