<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Ruleta -->
        <ImageView
            android:id="@+id/rouletteWheel"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/roulette_wheel"
            android:layout_gravity="center" />

        <!-- Triángulo indicador -->
        <ImageView
            android:id="@+id/triangleIndicator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/triangle"
            android:layout_gravity="center" />

        <!-- Botón para Girar -->
        <Button
            android:id="@+id/btnSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Girar"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="¡El resultado aparecerá aquí!"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- Sistema de fichas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/chipIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ficha_1" />

            <TextView
                android:id="@+id/chipCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="100"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Mesa de apuestas -->
        <GridLayout
            android:id="@+id/bettingGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="6"
            android:alignmentMode="alignMargins"
            android:padding="4dp">

            <!-- Ejemplo de botones para números -->
            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:backgroundTint="#F44336"
                android:text="1"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:backgroundTint="#000000"
                android:text="2"
                android:textColor="#FFFFFF" />
        </GridLayout>

        <!-- Opciones de apuesta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnEven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVEN"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnOdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ODD"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
